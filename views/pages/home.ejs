      src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.0/socket.io.min.js"
      integrity="sha384-c79GN5VsunZvi+Q/WObgk2in0CbZsHnjEqvFxC5DxHn9lTfNce2WW6h2pH6u/kF+"
      crossorigin="anonymous"
    ></script>
    <!-- Template Main JS File -->
    <script src="js/home/main.js"></script>
    <script>
      const socket = io("https://gmodapi.kashir.fr/", {
          withCredentials: true,
          secure: true,
          transports: ["polling"]
      });

      var steamid = '<%= steamid %>'
      var playerCount = '<%= playersIG %>'
      document.getElementById('playerCount').innerHTML = playerCount
      var listActivitiesGmod = document.getElementById('listActivitiesGmod')

      function changedName(array, list) {
        var li = document.createElement('li')
        li.setAttribute("class", "list-group-item list-group-item-warning")
        li.appendChild(document.createTextNode(`${array[1]} s'est renommé ${array[2]}`))
        list.appendChild(li)
      }
      function playerArrested(resume, list) {
        var li = document.createElement('li')
        li.setAttribute("class", "list-group-item list-group-item-warning")
        li.appendChild(document.createTextNode(`${resume[0]} est arrêté pendant ${resume[1]}s par ${resume[2]}`))
        list.appendChild(li)
      }
      function playerGetSalary(salary, list) {
        var li = document.createElement('li')
        li.setAttribute("class", "list-group-item list-group-item-info")
        li.appendChild(document.createTextNode(`${salary[0]} a reçu son salaire de ${salary[1]}$ de son métier ${salary[2].name}`))
        list.appendChild(li)
      }
      function playerPickMoney(pickup, list) {
        var li = document.createElement('li')
        li.setAttribute("class", "list-group-item list-group-item-info")
        li.appendChild(document.createTextNode(`${pickup[0]} a récupérer par-terre ${pickup[1]}$`))
        list.appendChild(li)
      }
      function playerBanned(data, list) {
        var li = document.createElement('li')
        li.setAttribute("class", "list-group-item list-group-item-warning")
        li.appendChild(document.createTextNode(`${data[0]} a été ban pendant ${data[1]}$ par ${data[2]}`))
        list.appendChild(li)
      }

      socket.emit('getUserRole', steamid)


      socket.on("connect", () => {
          console.log(socket.connected); // true
      });

      socket.on("ChangeName", (namesArray) => {
          changedName(namesArray, listActivitiesGmod)
      })
      socket.on("playerArrest", (resume) => {
        playerArrested(resume, listActivitiesGmod)
      })
      socket.on("playerGetSalary", (salary) => {
        playerGetSalary(salary, listActivitiesGmod)
      })
      socket.on("playerPickMoney", (money) => {
        playerPickMoney(money, listActivitiesGmod)
      })
      socket.on("playerBanned", (data) => {
        console.log(data)
        playerBanned(data, listActivitiesGmod)
      })
      socket.on("userRank", (rank) => {
        document.getElementById('userRank').innerHTML = rank
      })

    </script>
